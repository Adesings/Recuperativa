

<h2>Mantenedor</h2>

<fieldset>
<legend> Ingreso de Animales</legend>
@using (@Html.BeginForm("Guardar", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <span class="col-md-2">
            Diio:
        </span>
        <span class="col-md-6">
            @Html.TextBox("codigo", null, new { @class = "form-control", placeholder = "ingresa un codigo" })
        </span>
    </div>
    <div class="form-group">
        <span class="col-md-2">
            Nombre:
        </span>
        <span class="col-md-6">
            @Html.TextBox("nombre", null, new { @class = "form-control", placeholder = "ingresa un nombre" })
        </span>
    </div>
    <div class="form-group">
        <span class="col-md-2">
            Sexo:
        </span>
        <span class="col-md-6">
            @Html.DropDownList("sexo", new List<SelectListItem>
                    {
                        new SelectListItem{Text="Macho", Value="Macho"},
                        new SelectListItem{Text="Hembra", Value="Hembra"}
                    },
                 "Selecciona un Sexo",
                 new { @class = "form-control" }
                 )
        </span>
    </div>
    <div class="form-group">
        <span class="col-md-2">
            Raza:
        </span>
        <span class="col-md-6">
            @Html.DropDownList("raza", new List<SelectListItem>
                    {
                        new SelectListItem{Text="HOLSTEIN", Value="HOLSTEIN"},
                        new SelectListItem{Text="JERSEY", Value="JERSEY"}
                    },
                 "Selecciona una Raza",
                 new { @class = "form-control" }
                 )
        </span>
    </div>
    <div class="form-group">
        <span class="col-md-2">
            Promedio de leche:
        </span>
        <span class="col-md-6">
            @Html.TextBox("promedio", null, new { @class = "form-control", placeholder = "ingresa una cantidad" })
        </span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Enviar formulario</button>
    </div>

}
</fieldset>

